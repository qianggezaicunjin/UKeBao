<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/x5"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/y100"
        android:id="@+id/addPhtoto_StoreAddActivity">

        <ImageView
            android:id="@+id/addphoto"
            android:layout_width="@dimen/x60"
            android:layout_height="@dimen/y60"
            android:layout_marginTop="@dimen/y10"
            android:layout_centerHorizontal="true"
            android:src="@drawable/add_businessimage"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/goods_delephoto"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/y15"
            android:layout_alignRight="@+id/addphoto"
            android:layout_alignTop="@+id/addphoto"
            android:layout_marginRight="-10dp"
            android:layout_marginTop="-8dp"
            android:src="@drawable/delete_photo"
            />
        <EditText
            android:id="@+id/et_goodsName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:layout_below="@id/addphoto"
            android:textColorHint="#999999"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_margin="2dp"
            android:gravity="center"/>
    </RelativeLayout>

</LinearLayout>