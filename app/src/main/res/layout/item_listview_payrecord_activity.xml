<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/x10"
    android:orientation="horizontal" >

    <ImageView
        android:layout_gravity="center_vertical"
        android:id="@+id/iamgeTitle_listView_payRecordActivity"
        android:layout_width="@dimen/x60"
        android:layout_height="@dimen/y60"
        android:layout_marginLeft="@dimen/x5"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:layout_marginTop="@dimen/y20"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/userName_listView_payRecordActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/x5"
                android:hint="hellow！优积分"
                android:textColor="@color/text_color_grey" />

            <TextView
                android:id="@+id/typePrice_listView_payRecordActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x10"
                android:hint="+90.00"
                android:textColor="@color/textColor_sameAs_Title" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/orderCreatTime_listView_payRecordActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/y20"
                android:layout_marginLeft="@dimen/x5"
                android:hint="订单创立时间"
                android:textSize="12sp"
                android:textColor="@color/text_color_grey" />

            <TextView
                android:id="@+id/typeOrder_listView_payRecordActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/y20"
                android:layout_marginRight="@dimen/x10"
                android:hint="+90.00"
                android:textSize="12sp"
                android:textColor="@color/text_color_grey"  />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>