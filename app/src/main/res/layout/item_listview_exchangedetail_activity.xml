<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/orderCount_listView_exchangDetail_Activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/y10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/y20"
        android:background="#fff"
        android:textColor="@color/light_grey"
        android:visibility="visible"
        tool:text="订单编号         of1111111111111" />

    <View
        android:id="@+id/xixian_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y1"
        android:background="#eee" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_listView_exchangDetail_Activity"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/y80"
            android:layout_marginBottom="@dimen/y5"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/y5"
            android:scaleType="fitXY"
            android:src="@drawable/default_good" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y80"
            android:orientation="vertical">

            <TextView
                android:id="@+id/goodsName_listView_exchangDetail_Activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:textColor="@color/text_gray" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/goodsPrice_listView_exchangDetail_Activity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x10"
                android:textColor="@color/light_grey" />
        </LinearLayout>

        <TextView
            android:id="@+id/goodsCount_listView_exchangDetail_Activity"
            android:layout_width="0dp"
            android:layout_height="@dimen/y80"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/text_gray" />
    </LinearLayout>

    <View
        android:id="@+id/item_xixian"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/y10"
        android:background="#eee"
        android:visibility="gone" />

    <View
        android:id="@+id/item_xixian_small"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/y10"
        android:background="#eee"
        android:visibility="gone" />

</LinearLayout>