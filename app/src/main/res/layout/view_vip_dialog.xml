<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x268"
        android:layout_height="@dimen/y336"
        android:background="#fff"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y150"
            android:background="@drawable/banner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">

            <TextView
                android:layout_width="@dimen/x155"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/y15"
                android:text="@string/lan_vip_context"
                android:textColor="#333333"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_vip_function"
                android:layout_width="@dimen/x120"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/y39"
                android:layout_marginRight="@dimen/y39"
                android:layout_marginTop="@dimen/y20"
                android:drawableLeft="@drawable/tishi"
                android:drawablePadding="2dp"
                android:text="@string/lan_vip_function"
                android:textColor="#ea48a1"
                android:textSize="14sp" />

            <Button
                android:id="@+id/bt_dialog_openVip"
                android:layout_width="@dimen/x200"
                android:layout_height="@dimen/y26"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="@dimen/y3"
                android:layout_marginTop="@dimen/y10"
                android:background="@drawable/button"
                android:gravity="center"
                android:text="立即开通"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </LinearLayout>
    </LinearLayout>
</LinearLayout>