<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="@dimen/x228"
        android:layout_height="@dimen/y300"
        android:background="#333333"
        android:alpha="0.9"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/y127"
            android:background="@drawable/banner" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#fff">
        <TextView
            android:layout_width="@dimen/x155"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x11"
            android:layout_marginTop="@dimen/y15"
            android:text="@string/lan_vip_context"
            android:textColor="#333333"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_vip_function"
            android:layout_width="@dimen/x120"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y39"
            android:layout_marginRight="@dimen/y39"
            android:layout_marginTop="@dimen/y20"
            android:drawableLeft="@drawable/tishi"
            android:drawablePadding="2dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/lan_vip_function"
            android:textColor="#ea48a1"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bt_dialog_openVip"
            android:layout_width="@dimen/x153"
            android:layout_height="@dimen/y26"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y10"
            android:layout_marginBottom="@dimen/y3"
            android:background="@drawable/button"
            android:gravity="center"
            android:text="立即开通"
            android:textColor="@color/white"
            android:textSize="16sp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y38"
            android:background="#333333"
            android:alpha="0.5"
            android:layout_marginTop="@dimen/y5">

            <Button
                android:id="@+id/bt_dialog_close"
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/y16"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/close" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>