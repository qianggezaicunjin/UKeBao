<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y100"
        android:background="@drawable/vip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y15"
        android:text="@string/lan_vip_recharge_success"
        android:textColor="#333333"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/lan_vip_recharge_success1"
        android:textColor="#333333"
        android:textSize="14sp" />

    <Button
        android:id="@+id/bt_experience"
        android:layout_width="@dimen/x180"
        android:layout_height="@dimen/y40"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y37"
        android:background="@drawable/pay_success_button"
        android:text="马上体验"
        android:textColor="#eb48a1"
        android:textSize="18sp" />
</LinearLayout>