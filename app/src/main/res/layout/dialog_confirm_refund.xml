<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_exit_dialog" >

    <!-- 退款 -->

    <LinearLayout
        android:id="@+id/ll_confirm_refund_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_confirm_refund"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/y20"
            android:gravity="center_vertical"
            android:text="确认退款"
            android:textColor="@color/text_color_black"
            android:textSize="20sp" />

        <View
            android:id="@+id/view_divide_refund"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y1"
            android:layout_below="@+id/tv_confirm_refund"
            android:layout_marginTop="@dimen/y5"
            android:background="@color/text_hint_color" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_confirm_refund_title"
        android:layout_marginTop="@dimen/y1"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/x10" >

        <TextView
            android:id="@+id/tv_refund_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refund_hint"
            android:textColor="@color/text_color_black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/et_password_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y10"
            android:background="@null"
            android:gravity="center"
            android:hint="@string/password_input_hint"
            android:textColorHint="@color/text_hint_color"
            android:textSize="16sp"
            android:inputType="textPassword"
            />

        <View
            android:id="@+id/view_divide"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y1"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/y5"
            android:background="@color/text_hint_color" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_confirm_or_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_marginBottom="@dimen/y8"
        android:orientation="horizontal"
        android:padding="@dimen/x8" >

        <Button
            android:id="@+id/btn_cancel_refund"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_exit_confirm_button"
            android:padding="@dimen/x6"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_confirm_refund"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1"
            android:background="@drawable/bg_exit_confirm_button"
            android:padding="@dimen/x6"
            android:text="@string/confirm_refund"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</RelativeLayout>