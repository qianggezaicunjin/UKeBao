<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iamgeTitle_listView_exchangeRecordActivity"
        android:layout_width="@dimen/x80"
        android:layout_height="@dimen/y80"
        android:layout_marginBottom="@dimen/y8"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginTop="@dimen/y8"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y80"
        android:layout_marginBottom="@dimen/y8"
        android:layout_marginTop="@dimen/y8"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_weight="1"
                android:singleLine="true"
                android:id="@+id/userName_listView_exchangeRecordActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                />

            <TextView
                android:gravity="right"
                android:layout_marginLeft="@dimen/x5"
                android:singleLine="true"
                android:layout_weight="1"
                android:id="@+id/realPrice_listView_exchangeRecordActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/status_color" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:singleLine="true"
                android:id="@+id/orderTime_listView_exchangeRecordActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x5"
                android:layout_weight="1"
                android:textSize="12sp" />
            <TextView
                android:singleLine="true"
                android:gravity="right"
                android:layout_marginLeft="@dimen/x5"
                android:layout_weight="1"
                android:id="@+id/orderName_listView_exchangeRecordActivity"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>