<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_exit_dialog" >

    <TextView
        android:id="@+id/tv_testing_success_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y20"
        android:text="@string/testing_success"
        android:textColor="@color/text_color_grey"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <TextView
            android:textSize="16sp"
            android:id="@+id/tv_testing_success_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单验证成功"
            android:textColor="@color/text_color_grey" />

        <TextView
            android:textSize="16sp"
            android:id="@+id/tv_total_money_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y60"
            android:text="本单合计结算:45元"
            android:textColor="@color/text_color_grey" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/x10" >

        <Button
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:id="@+id/btn_close"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_exit_confirm_button"
            android:text="@string/close"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

</RelativeLayout>